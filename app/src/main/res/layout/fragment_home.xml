<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/homeToolbar"
                layout="@layout/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/searchEditTextView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/background_white_stroke_light_gray"
                android:drawableEnd="@drawable/ic_right"
                android:hint="서울 어디로 가고싶으신가요?"
                android:paddingStart="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/homeToolbar" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/recommendTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/gamtanregular"
                android:text="오늘의 추천 장소"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/searchEditTextView"
                app:layout_constraintTop_toBottomOf="@id/searchEditTextView" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommendRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recommendTv" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recommendRecyclerView">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/operaMenu"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/opera"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/operaTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오페라"
                    android:textColor="@color/black"
                    android:paddingTop="4dp"
                    android:textSize="12dp"
                    app:layout_constraintEnd_toEndOf="@id/operaMenu"
                    app:layout_constraintStart_toStartOf="@id/operaMenu"
                    app:layout_constraintTop_toBottomOf="@id/operaMenu" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/musicalMenu"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/musical"
                    app:layout_constraintEnd_toStartOf="@id/classicMenu"
                    app:layout_constraintStart_toEndOf="@id/operaMenu"
                    app:layout_constraintTop_toTopOf="@id/operaMenu" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/musicalTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="뮤지컬"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:paddingTop="4dp"
                    app:layout_constraintEnd_toEndOf="@id/musicalMenu"
                    app:layout_constraintStart_toStartOf="@id/musicalMenu"
                    app:layout_constraintTop_toBottomOf="@id/musicalMenu" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/classicMenu"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/classic"
                    app:layout_constraintEnd_toStartOf="@id/koreanClassicMenu"
                    app:layout_constraintStart_toEndOf="@id/musicalMenu"
                    app:layout_constraintTop_toTopOf="@id/operaMenu" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/classicTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="클래식"
                    android:paddingTop="4dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:paddingStart="10dp"
                    app:layout_constraintEnd_toEndOf="@id/classicMenu"
                    app:layout_constraintStart_toStartOf="@id/classicMenu"
                    app:layout_constraintTop_toBottomOf="@id/classicMenu" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/koreanClassicMenu"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/janggu"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/classicMenu"
                    app:layout_constraintTop_toTopOf="@id/operaMenu" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/koreanClassicTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="국악"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:paddingTop="4dp"
                    app:layout_constraintEnd_toEndOf="@id/koreanClassicMenu"
                    app:layout_constraintStart_toStartOf="@id/koreanClassicMenu"
                    app:layout_constraintTop_toBottomOf="@id/koreanClassicMenu" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/dramaMenu"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/drama"
                    android:paddingTop="4dp"
                    app:layout_constraintStart_toStartOf="@id/operaMenu"
                    app:layout_constraintTop_toBottomOf="@id/operaTv" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dramaTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="클래식"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:paddingTop="4dp"
                    app:layout_constraintEnd_toEndOf="@id/dramaMenu"
                    app:layout_constraintStart_toStartOf="@id/dramaMenu"
                    app:layout_constraintTop_toBottomOf="@id/dramaMenu" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>